<h1>Payment Calculator</h1>

<form action="/payment/result">
  <div> 
    <label for="present_value"> 
      Principal
    </label>
    <input type="text" id="present_value" name="pv" placeholder="E.g. 5">

    <label for="rate_per_period"> 
      APR
    </label>
    <input type="text" id="rate_per_period" name="r" placeholder="E.g. 100">
    
    <label for="number_periods"> 
      Number of years
    </label>
    <input type="text" id="number_periods" name="n" placeholder="E.g. 100">

    <button>
      Calculate monthly payment
    </button>
  </div> 
</form> 
